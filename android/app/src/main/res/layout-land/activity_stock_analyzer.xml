<?xml version="1.0" encoding="utf-8"?>
<!--xmlns:tools="http://schemas.android.com/tools"-->
<!--tools:openDrawer="start"-->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSecondary">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            app:layout_anchor="@id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/header_layout">

            <View
                android:id="@+id/header_background"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/colorPrimary"/>


            <LinearLayout
                android:id="@+id/datetime_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_internal"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:layout_marginRight="@dimen/spacing_external"
                    android:textSize="@dimen/large_header_text_size"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:55 PM EST"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="@dimen/small_header_text_size"
                    android:textColor="@color/colorTextPrimary"/>

            </LinearLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/stock_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_below="@+id/datetime_header_layout"
                android:layout_marginLeft="@dimen/spacing_external"
                android:layout_marginRight="@dimen/spacing_external"
                app:tabMaxWidth="0dp"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabIndicatorColor="@color/colorSecondary"
                app:tabSelectedTextColor="@color/colorSecondary"
                app:tabTextColor="@color/colorSecondary">

                <android.support.design.widget.TabItem
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="AMC"/>

                <android.support.design.widget.TabItem
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="AMD"/>

                <android.support.design.widget.TabItem
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="BPMX"/>
            </android.support.design.widget.TabLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/stock_tabs"
                android:layout_marginTop="@dimen/spacing_internal"
                android:layout_marginLeft="@dimen/spacing_external"
                android:layout_marginRight="@dimen/spacing_external"
                android:layout_marginBottom="@dimen/spacing_external"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/spacing_internal">

                    <include layout="@layout/metric_card"
                        android:id="@+id/price_card"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/spacing_internal"/>

                    <include layout="@layout/metric_card"
                        android:id="@+id/volume_card"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    </LinearLayout>


                <android.support.design.widget.TabLayout
                    android:id="@+id/interval_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabMaxWidth="0dp"
                    app:tabGravity="fill"
                    app:tabMode="fixed"
                    app:tabIndicatorColor="@color/colorPrimary"
                    app:tabSelectedTextColor="@color/colorPrimary"
                    app:tabTextColor="@color/colorPrimaryDark"
                    android:background="@color/colorSecondaryDark"
                    android:elevation="2dp">

                    <android.support.design.widget.TabItem
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="1D"
                        android:background="@color/colorSecondaryDark"/>

                    <android.support.design.widget.TabItem
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="1W"
                        android:background="@color/colorSecondaryDark"/>

                    <android.support.design.widget.TabItem
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="1M"
                        android:background="@color/colorSecondaryDark"/>

                    <android.support.design.widget.TabItem
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="3M"
                        android:background="@color/colorSecondaryDark"/>

                    <android.support.design.widget.TabItem
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="1Y"
                        android:background="@color/colorSecondaryDark"/>

                    <android.support.design.widget.TabItem
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="5Y"
                        android:background="@color/colorSecondaryDark"/>

                    <android.support.design.widget.TabItem
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="10Y"
                        android:background="@color/colorSecondaryDark"/>

                </android.support.design.widget.TabLayout>
            </LinearLayout>
        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/colorSecondary"
        app:itemTextColor="@color/colorPrimary"
        app:headerLayout="@layout/nav_header_portfolio"
        app:menu="@menu/activity_portfolio_drawer" />

</android.support.v4.widget.DrawerLayout>
