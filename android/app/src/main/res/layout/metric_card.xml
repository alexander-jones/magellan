<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorSecondaryDark"
    android:weightSum="1"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0"
        android:layout_marginTop="@dimen/spacing_internal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:layout_marginRight="@dimen/spacing_external"
            android:textSize="@dimen/small_header_text_size"
            android:textColor="@color/colorTextSecondary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/value_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+%0.00 (0.00%)"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/small_header_text_size"
            android:textColor="@color/colorTextSecondary"/>

    </LinearLayout>

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/spacing_internal"
        android:layout_marginTop="@dimen/spacing_internal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginLeft="@dimen/spacing_internal"
        android:layout_marginBottom="@dimen/spacing_internal"
        android:layout_marginRight="@dimen/spacing_internal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/layers"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layer_button_dimen"
            android:layout_marginRight="@dimen/spacing_internal"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/add_layer"
            android:orientation="horizontal"/>

        <ImageButton
            android:id="@+id/add_layer"
            android:layout_width="@dimen/layer_button_dimen"
            android:layout_height="@dimen/layer_button_dimen"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_add_24dp"
            android:background="@color/colorSecondaryDark"/>
    </RelativeLayout>
</LinearLayout>