<?xml version="1.0" encoding="utf-8"?>
<!--xmlns:tools="http://schemas.android.com/tools"-->
<!--tools:openDrawer="start"-->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:theme="@style/AppTheme.Toolbar"/>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorSecondary"
            app:layout_anchor="@id/app_bar"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/portfolio_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorSecondary"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/header_background"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/portfolio_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="My Portfolio"
                        android:textSize="@dimen/largest_header_text_size"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:id="@+id/date_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_external"
                        android:layout_below="@+id/portfolio_title"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/spacing_internal"
                            android:gravity="center_vertical"
                            android:text="Today"
                            android:textSize="@dimen/large_header_text_size"
                            android:textColor="@color/colorTextPrimary"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/time"
                            android:layout_alignBaseline="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="12:55 PM EST"
                            android:textSize="@dimen/small_header_text_size"
                            android:textColor="@color/colorTextPrimary"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_external"
                        android:layout_below="@+id/date_header"
                        android:background="@color/colorSecondaryDark">

                        <TextView
                            android:id="@+id/portfolio_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/spacing_internal"
                            android:gravity="center_horizontal"
                            android:text="$0.00"
                            android:textSize="@dimen/large_header_text_size"
                            android:textColor="@color/colorTextSecondary"/>

                        <com.github.mikephil.charting.charts.CombinedChart
                            android:id="@+id/portfolio_chart"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_below="@+id/value"
                            android:layout_marginLeft="@dimen/spacing_internal"/>

                        <ProgressBar
                            android:id="@+id/progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_external"
                    android:layout_marginRight="@dimen/spacing_external"
                    android:layout_marginTop="@dimen/spacing_external"
                    android:layout_marginBottom="@dimen/spacing_internal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_external"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Watchlist"
                        android:textSize="@dimen/small_header_text_size"
                        android:textColor="@color/colorSecondaryDark"
                        android:textStyle="bold"/>

                    <ImageButton
                        android:id="@+id/watch_list_options_button"
                        android:layout_width="@dimen/button_height"
                        android:layout_height="@dimen/button_height"
                        android:layout_alignParentRight="true"
                        android:background="@color/colorSecondary"
                        style="?android:attr/actionOverflowButtonStyle"/>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/watchlist_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/spacing_external"
                    android:layout_marginRight="@dimen/spacing_external"
                    android:layout_marginBottom="@dimen/spacing_external"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/colorSecondary"
        app:itemTextColor="@color/colorPrimary"
        app:headerLayout="@layout/nav_header_portfolio"
        app:menu="@menu/activity_portfolio_drawer" />

</android.support.v4.widget.DrawerLayout>
