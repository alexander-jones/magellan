<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundDark"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/spacing_internal"
        android:layout_marginBottom="@dimen/spacing_internal"
        android:layout_marginLeft="@dimen/spacing_external"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_internal"
            android:text="QQQQ"
            android:textSize="@dimen/large_header_text_size"
            android:textColor="@color/colorAccentPrimaryLight"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/symbol"
            android:text="QQQQ"
            android:textSize="@dimen/small_header_text_size"
            android:textColor="@color/colorAccentSecondaryLight"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/change_status"
        android:src="@drawable/ic_add_24dp"
        android:tint="@color/colorPrimary"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/spacing_external"
        android:textSize="@dimen/small_header_text_size"
        android:background="@color/colorBackgroundDark"/>

</RelativeLayout>